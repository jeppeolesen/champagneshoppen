.landing
	.hero
		position relative
		margin-top 15px
		
		h1
			color white
			position absolute
			top 50%
			font-size 2.5em
			text-transform uppercase
			transform translateY(-50%)
			text-align center
			width 100%
			margin 0
			letter-spacing 0.18em
			font-weight 600
			
		img
			width 100%
			height auto
			display block
			
	.grid
		&.type-1
			margin-top 15px
			clearfix()
			
			div
				width 310px
				float left
				
				a
					text-decoration none
					color inherit
				
				h2
					font-weight $medium
					text-align center
					text-transform uppercase
					margin 0
					letter-spacing 0.18em
					font-size 12px
					font-weight 600
				
				&.center
					margin 0 15px
				
				img
					width 100%
					display block
					
		&.type-2
			clearfix()
			
			a
				color inherit
				
				&:hover div
					opacity .6
			
			div
				width 310px
				float left
				text-align center
				margin-top 15px
				transition opacity 0.3s $easeOutCubic
				
				&:nth-child(3n+2)
					margin-left 15px
					margin-right 15px
					
				img
					display block
					margin 2em auto 0
					max-width 100%
				
				span
					display block
					letter-spacing 0.18em
					
					&.name
						text-transform uppercase
						font-weight $semiBold
						margin-top 1em