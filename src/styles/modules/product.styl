.landing
	.product
		margin-top 3em
		clearfix()
		
		.left
			width 30%
			
			img
				display block
				margin 0 auto
			
		.right
			width 70%
			
		.left
		.right
			float left
			
		.name
		.house
			font-size 1em
			margin 0
			line-height 1em
			
		.name
			text-transform uppercase
			
		.house
			font-weight normal
			margin .5em 0
			font-size .8em
			
		.price
			font-weight bold
			margin 2em auto
			display block
			
		.column
			width 50%
			float left
			padding-right 1.5em
			box-sizing border-box
			line-height 1.25em
			
			p
				margin-top 0
				
			h1
			h2
			h3
				margin 0 auto 1em
				
			h1
				font-size 14px
				font-weight $semiBold
				text-transform uppercase
				letter-spacing 0.18em
				
			h2
				font-size 12px
				font-weight $semiBold
				text-transform uppercase
				letter-spacing 0.18em
				
			h3
				font-size 12px
				font-weight $semiBold
				letter-spacing 0.18em
				
		.column-left
			border-right 1px solid black
			
		.column-right
			padding-left 1.5em