.landing
	.product
		margin-top 3em
		clearfix()
		
		.left
			width 30%
			
			img
				display block
				margin 0 auto
			
		.right
			width 70%
			
		.left
		.right
			float left
			
		.name
		.house
			font-size 1em
			margin 0
			line-height 1em
			
		.name
			text-transform uppercase
			
		.house
			font-weight normal
			margin .5em 0
			font-size .8em
			
		.price
			font-weight bold
			margin-top 2em
			display block
			
		.column
			width 50%
			float left
			padding-right 2em
			box-sizing border-box
		